@model Vidly.ViewModels.MovieFormViewModel
@{
	ViewBag.Title = "New";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (Html.BeginForm("Create", "Movies"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Movie.Name)
		@Html.TextBoxFor(m => m.Movie.Name, new { @class="form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Genres)
		@Html.DropDownListFor(m => m.Genres, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.DateAdded)
		@Html.TextBoxFor(m => m.DateAdded, new {@class="form-control"})
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.NumberInStock)
		@Html.TextBoxFor(m => m.NumberInStock, new {@class="form-control"})
	</div>
}

